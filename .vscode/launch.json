  "version": "0.2.0",
  "configurations": [
    {
      "name": "Launch SSO",
      "program": "${workspaceFolder}/src/Effuse.SSO.Local/bin/Debug/net6.0/Effuse.SSO.Local",
      "console": "integratedTerminal",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build_solution",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DATA_DIR": "./resources/data"
      }
    },
    {
      "name": "Launch Server",
      "program": "${workspaceFolder}/src/Effuse.Server.Local/bin/Debug/net6.0/Effuse.Server.Local",
      "console": "integratedTerminal",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build_solution",
      "envFile": "${workspaceFolder}/.env",
      "env": {
        "DATA_DIR": "./resources/server-data"
      }
    }
  ],
  "compounds": [
    {
      "name": "Launch All",
      "configurations": [
        "Launch Server",
        "Launch SSO"
      ]
    }
  ]
}
